<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.test.testapp.ui.details.DetailsViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1E1B2A"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:background="@mipmap/img_data_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_35">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@mipmap/img_button_return" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="个人资料"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_17" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_toLeftOf="@id/iv_more"
                    android:src="@mipmap/btn_share" />

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/icon_report" />

            </RelativeLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_view"
            android:layout_marginTop="@dimen/dp_80"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginTop="@dimen/dp_25">

                    <ImageView
                        android:id="@+id/iv_heard"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="爱丽丝"
                                android:textColor="@color/color_FFFFFF"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="@dimen/dp_44"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:scaleType="fitXY"
                                android:src="@mipmap/img_certification" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:text="Ta已完成人脸认证"
                                android:textColor="@color/color_FF878B97"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_16"
                                android:background="@drawable/ic_data_icon"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:text="昆明"
                                android:textColor="@color/color_FF878B97"
                                android:textSize="@dimen/sp_12" />

                            <LinearLayout
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:background="@drawable/ic_data_age"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/icon_female" />

                                <TextView
                                    android:id="@+id/tv_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/color_FFFFFF"
                                    android:textSize="@dimen/sp_12" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_occupation"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:background="@drawable/ic_data_icon"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:text="护士"
                                android:textColor="@color/color_FF878B97"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:background="@drawable/ic_data_icon"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:text="165cm"
                                android:textColor="@color/color_FF878B97"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_16"
                                android:background="@drawable/ic_data_icon"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:src="@mipmap/icon_distance">

                                </ImageView>

                                <TextView
                                    android:id="@+id/tv_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:text="16km"
                                    android:textColor="@color/color_FF878B97"
                                    android:textSize="@dimen/sp_12" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_marginLeft="@dimen/dp_9"
                                android:src="@mipmap/icon_tips" />

                            <TextView
                                android:id="@+id/tv_online"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="在线"
                                android:textColor="@color/color_FF05C98E"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/ic_datalist"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_15">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ta的相册"
                                android:textColor="@color/color_FFFFFF"
                                android:textSize="@dimen/sp_16" />

                            <ImageView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/sp_16"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:src="@mipmap/btn_photo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:text="12"
                                android:textColor="@color/color_FFFFFF"
                                android:textSize="@dimen/sp_12" />

                            <ImageView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/sp_16"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:src="@mipmap/btn_video" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:text="12"
                                android:textColor="@color/color_FFFFFF"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="邀请Ta上传照片"
                            android:textColor="@color/color_FF9A7CfE"
                            android:textSize="@dimen/sp_15" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:overScrollMode="never" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@color/color_33303F" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_88"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Ta的动态"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/sp_16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_dynamic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_8"
                                android:overScrollMode="never" />

                            <ImageView
                                android:layout_width="@dimen/dp_21"
                                android:layout_height="@dimen/dp_21"
                                android:padding="@dimen/dp_3"
                                android:src="@mipmap/icon_more" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_24"
                            android:background="@color/color_33303F" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_23"
                        android:text="Ta的联系方式"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_4"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="如Ta的联系方式有误，不验证或者广告等情况请点"
                            android:textColor="@color/color_FF767B89"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快速举报"
                            android:textColor="@color/color_FC6446"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_28"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_15">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_28"
                                android:layout_height="match_parent"
                                android:src="@mipmap/icon_wchat" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="微信"
                                android:textColor="@color/color_FFFFFF"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(已填)"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/sp_15" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_see_coin"
                            android:gravity="center"
                            android:text="查看"
                            android:textColor="@color/color_FF9A7CFE"
                            android:textSize="@dimen/sp_15" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_28"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_15">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_28"
                                android:layout_height="match_parent"
                                android:src="@mipmap/icon_qq" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="QQ"
                                android:textColor="@color/color_FFFFFF"
                                android:textSize="@dimen/sp_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(已填)"
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/sp_15" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_see_coin"
                            android:gravity="center"
                            android:text="查看"
                            android:textColor="@color/color_FF9A7CFE"
                            android:textSize="@dimen/sp_15" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@color/color_33303F" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身高"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_15" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="165cm"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/sp_15" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="体重"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_15" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="48kg"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/sp_15" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="约会内容"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_15" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="私聊约会内容"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/sp_15" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个性标签"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/sp_15" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="女神/时尚/温柔"
                            android:textColor="@color/color_FFFFFF"
                            android:textSize="@dimen/sp_15" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_28"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:background="@drawable/ic_album_null_coin"
                        android:gravity="center"
                        android:text="请勿通过约会进行不法交易，如被举报核实将封号处理"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_68"
            android:layout_alignParentBottom="true"
            android:background="@color/color_14121E">

        </LinearLayout>

    </RelativeLayout>

</layout>